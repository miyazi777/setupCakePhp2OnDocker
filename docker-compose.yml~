web:
    build: .
    volumes:
        - ./cakephp:/var/www/cakephp
    ports:
        - "80:80"
    links:
        - db
db:
    image: mysql:5.7.7
    volumes_from:
        - dbdata
    environment:
        MYSQL_ROOT_PASSWORD: root
    ports:
        - "3306:3306"
dbdata:
    image: busybox
    volumes:
        - /var/lib/mysql
